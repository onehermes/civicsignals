{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"palette": [
				{
					"slug": "background",
					"color": "#020b1f",
					"name": "Background"
				},
				{
					"slug": "surface",
					"color": "#0b1633",
					"name": "Surface"
				},
				{
					"slug": "surface-alt",
					"color": "#111d3c",
					"name": "Surface Alt"
				},
			{
				"slug": "primary",
				"color": "#0066cc",
				"name": "Primary"
			},
			{
				"slug": "primary-soft",
				"color": "#003d7a",
				"name": "Primary Soft"
			},
			{
				"slug": "accent",
				"color": "#ffb020",
				"name": "Accent"
			},
				{
					"slug": "text",
					"color": "#f5f7ff",
					"name": "Text"
				},
				{
					"slug": "muted",
					"color": "#c3c9e6",
					"name": "Muted"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "\"Inter\", system-ui, -apple-system, BlinkMacSystemFont, \"Segoe UI\", sans-serif",
					"slug": "inter",
					"name": "Inter"
				}
			],
			"fontSizes": [
				{
					"slug": "h6",
					"size": "13px",
					"name": "H6"
				},
				{
					"slug": "h5",
					"size": "15px",
					"name": "H5"
				},
				{
					"slug": "h4",
					"size": "18px",
					"name": "H4"
				},
				{
					"slug": "h3",
					"size": "22px",
					"name": "H3"
				},
				{
					"slug": "h2",
					"size": "26px",
					"name": "H2"
				},
				{
					"slug": "body",
					"size": "16px",
					"name": "Body"
				},
				{
					"slug": "h1",
					"size": "clamp(32px, 4vw, 42px)",
					"name": "H1"
				}
			],
			"fontWeights": [ "400", "500", "600", "700" ]
		},
		"spacing": {
			"spacingScale": {
				"operator": "+",
				"increment": 4,
				"steps": 12
			},
			"spacingSizes": [
				{
					"slug": "xs",
					"size": "4px",
					"name": "XS"
				},
				{
					"slug": "s",
					"size": "8px",
					"name": "S"
				},
				{
					"slug": "m",
					"size": "16px",
					"name": "M"
				},
				{
					"slug": "l",
					"size": "24px",
					"name": "L"
				},
				{
					"slug": "xl",
					"size": "32px",
					"name": "XL"
				},
				{
					"slug": "xxl",
					"size": "48px",
					"name": "XXL"
				}
			],
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"layout": {
			"contentSize": "1180px",
			"wideSize": "1180px"
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--text)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--inter)",
			"fontSize": "var(--wp--preset--font-size--body)",
			"lineHeight": "1.6"
		},
		"spacing": {
			"padding": {
				"top": "var(--wp--preset--spacing--l)",
				"bottom": "var(--wp--preset--spacing--l)",
				"left": "var(--wp--preset--spacing--m)",
				"right": "var(--wp--preset--spacing--m)"
			}
		},
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--h1)",
					"fontWeight": "700",
					"lineHeight": "1.1"
				},
				"color": {
					"text": "var(--wp--preset--color--text)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--h2)",
					"fontWeight": "600",
					"lineHeight": "1.2"
				},
				"color": {
					"text": "var(--wp--preset--color--text)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--h3)",
					"fontWeight": "600",
					"lineHeight": "1.3"
				},
				"color": {
					"text": "var(--wp--preset--color--text)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--h4)",
					"fontWeight": "600",
					"lineHeight": "1.4"
				},
				"color": {
					"text": "var(--wp--preset--color--text)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--h5)",
					"fontWeight": "600",
					"lineHeight": "1.4"
				},
				"color": {
					"text": "var(--wp--preset--color--text)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--h6)",
					"fontWeight": "600",
					"lineHeight": "1.4"
				},
				"color": {
					"text": "var(--wp--preset--color--muted)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--accent)"
					}
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--background)"
				},
				"typography": {
					"fontWeight": "600"
				},
				"spacing": {
					"padding": {
						"top": "10px",
						"bottom": "10px",
						"left": "18px",
						"right": "18px"
					}
				},
				"border": {
					"radius": "999px"
				}
			}
		},
		"blocks": {
			"core/group": {
				"spacing": {
					"blockGap": "var(--wp--preset--spacing--m)"
				}
			},
			"core/paragraph": {
				"color": {
					"text": "var(--wp--preset--color--text)"
				},
				"typography": {
					"fontWeight": "400"
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "front-page",
			"title": "Front Page",
			"postTypes": ["page"]
		},
		{
			"name": "single-story",
			"title": "Single Story",
			"postTypes": ["story"]
		},
		{
			"name": "archive-story",
			"title": "Stories Archive",
			"postTypes": ["story"]
		}
	]
}
