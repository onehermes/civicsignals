{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "primary",
					"color": "#003366",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#0066CC",
					"name": "Secondary"
				},
				{
					"slug": "background",
					"color": "#FFFFFF",
					"name": "Background"
				},
				{
					"slug": "surface",
					"color": "#F5F5F5",
					"name": "Surface"
				}
			]
		},
		"typography": {
			"fontSizes": [
				{
					"slug": "small",
					"size": "0.875rem",
					"name": "Small"
				},
				{
					"slug": "body",
					"size": "1rem",
					"name": "Body"
				},
				{
					"slug": "h2",
					"size": "2rem",
					"name": "H2"
				},
				{
					"slug": "h1",
					"size": "3rem",
					"name": "H1"
				}
			]
		},
		"spacing": {
			"spacingScale": {
				"operator": "*",
				"increment": 1.5,
				"steps": 7
			}
		},
		"layout": {
			"contentSize": "800px",
			"wideSize": "1200px"
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--primary)"
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--body)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--h1)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--h2)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--primary)"
					}
				}
			}
		},
		"blocks": {
			"core/post-terms": {
				"styles": {
					"spacing": {
						"padding": {
							"top": "var(--wp--preset--spacing--xs)",
							"bottom": "var(--wp--preset--spacing--xs)",
							"left": "var(--wp--preset--spacing--sm)",
							"right": "var(--wp--preset--spacing--sm)"
						},
						"margin": {
							"right": "var(--wp--preset--spacing--sm)",
							"top": "var(--wp--preset--spacing--sm)"
						},
						"border": {
							"width": "1px",
							"radius": "20px"
						}
					},
					"elements": {
						"link": {
							"color": {
								"text": "var(--wp--preset--color--primary)"
							},
							":hover": {
								"color": {
									"text": "var(--wp--preset--color--secondary)"
								}
							}
						}
					}
				},
				"variations": {
					"is-style-badge": {
						"styles": {
							"spacing": {
								"padding": {
									"top": "var(--wp--preset--spacing--xs)",
									"bottom": "var(--wp--preset--spacing--xs)",
									"left": "var(--wp--preset--spacing--sm)",
									"right": "var(--wp--preset--spacing--sm)"
								},
								"margin": {
									"right": "var(--wp--preset--spacing--sm)",
									"top": "var(--wp--preset--spacing--sm)"
								},
								"border": {
									"width": "1px",
									"color": "var(--wp--preset--color--primary)",
									"radius": "20px"
								}
							},
							"typography": {
								"fontSize": "var(--wp--preset--font-size--small)"
							},
							"elements": {
								"link": {
									"color": {
										"text": "var(--wp--preset--color--primary)"
									},
									":hover": {
										"color": {
											"text": "var(--wp--preset--color--secondary)"
										}
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}
